<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Alimentos"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:padding="16dp" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Alimento" />

    <EditText
        android:id="@+id/etCalorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calorias (kcal)" />

    <EditText
        android:id="@+id/etCarboidratos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Carboidratos (g)" />

    <EditText
        android:id="@+id/etProteinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ProteÃ­nas (g)" />

    <EditText
        android:id="@+id/etGordura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gordura (g)" />

    <EditText
        android:id="@+id/etQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade (g)" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar" />

    <ListView
        android:id="@+id/lvAlimentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
