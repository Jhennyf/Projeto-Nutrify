<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_nutrify"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/logo_desc" />

        <!-- Título -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vamos completar seu perfil"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isso nos ajudará a saber mais sobre você!"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <!-- Nome Completo -->
        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="10dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp" />

        <!-- Gênero -->
        <EditText
            android:id="@+id/genderEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Gênero"
            android:inputType="text"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="10dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp" />

        <!-- Data de nascimento -->
        <EditText
            android:id="@+id/birthDateEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Data de nascimento"
            android:inputType="date"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="10dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp" />

        <!-- Peso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Seu peso"
                android:inputType="numberDecimal"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="10dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <Button
                android:id="@+id/kgButton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="KG"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Altura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Sua altura"
                android:inputType="numberDecimal"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="10dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <Button
                android:id="@+id/cmButton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="CM"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cadastrar"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
