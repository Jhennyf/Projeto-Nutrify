<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Logo TextView -->
    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrify"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="8dp" />

    <!-- Macro TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macro"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Progress Bars -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Protein Progress Bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proteína"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal" />
            <ProgressBar
                android:id="@+id/proteinProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="50"
                android:max="100"
                android:progressTint="@color/blue" />
        </LinearLayout>

        <!-- Carbohydrate Progress Bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carboidrato"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal" />
            <ProgressBar
                android:id="@+id/carbohydrateProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="70"
                android:max="100"
                android:progressTint="@color/pink" />
        </LinearLayout>

        <!-- Fat Progress Bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gordura"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal" />
            <ProgressBar
                android:id="@+id/fatProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="30"
                android:max="100"
                android:progressTint="@color/yellow" />
        </LinearLayout>
    </LinearLayout>

    <!-- Additional Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <!-- Additional Progress Bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="159 / 1956 Kcal"
                android:textSize="16sp"
                android:max="100"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal" />
            <ProgressBar
                android:id="@+id/fiberProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="40"
                android:max="100"
                android:progressTint="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Meal Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Additional Meal Cards -->

        <!-- Café da Tarde Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Café da Tarde"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />
            <Button
                android:id="@+id/addFoodAfternoonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Alimento"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/afternoonFoodArray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <!-- Almoço Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almoço"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/addFoodLunchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Alimento"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/lunchFoodArray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <!-- Janta Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Janta"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/addFoodDinnerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Alimento"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/dinnerFoodArray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>